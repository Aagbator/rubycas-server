<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
                      "XHTML1-s.dtd" >
<html xmlns="http://www.w3.org/TR/1999/REC-html-in-xml"
      xml:lang="en" lang="en" >

  <head>
    <title><%= escape_html @organization %> Login</title>
    <link data-turbolinks-track="true" href="/beyondz.css" media="all" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700,400italic' rel='stylesheet' type='text/css'>
    <link rel="favorite icon" type="image/png" href="/favicon.ico" />
  </head>

  <body onload="if (document.getElementById('username')) document.getElementById('username').focus()">


    <div class="modal fade" id="notice-modal" tabindex="-1"
      role="dialog" aria-labelledby="notice-modal-label" aria-hidden="true"><div class="modal-dialog modal-sm"><div class="modal-content"><div class="modal-header"><button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button><h4 class="modal-title" id="notice-modal-label">Notice!</h4></div><div class="modal-body"></div><div class="modal-footer"><button type="button" class="btn btn-default" data-dismiss="modal">Close</button></div></div></div></div>
    
    <div class="public-container">

      <div class="header">
        <div class="floating-header">
          <div class="plank">
            <div class="section-container">
              <section id="banner" role="banner">
                <div class="top-left no-pad">
                  <a href="//<%= @domain %>/"><img alt="Bz logo 338" src="/bz_logo_338.png" /></a>
                </div>
                <div class="navigation-holder no-pad">
                  <div id="top-navigation" role="navigation">
                    <ul class="nav navbar-nav">
                      <li><a class="" href="//<%= @domain %>/">Home</a></li>
                      <li><a class="" href="//<%= @domain %>/apply">For Students</a></li>
                      <li><a class="" href="//<%= @domain %>/volunteer">For Volunteers</a></li>
                      <li><a class="" href="//<%= @domain %>/partner">For Partners</a></li>
                      <li>   <a href="//<%= @domain %>/users/sign_in_sso">Log In</a>

</li>
                    </ul>
                  </div>
                </div>
              </section>
            </div> <!-- .section-container -->
          </div>
        </div> <!-- .floating-header -->
        <!-- this acts to fill the space when the floating header is in fixed position up top -->
        <!-- when it moves down, this spacer assumes its size, keeping the rest of the page content
             from jumping around, confusing the user as to where they were looking -->
        <div class="floating-header-spacer"></div>
      </div> <!-- .header -->

      <main role="main">
        <%= yield %>
      </main>

      <div id="footer" class="plank">
  <div class="section-container">
    <section>
      <div class="col-sm-2">
        <a href="//<%= @domain %>/"><img alt="Bz logo 338" src="/bz_logo_338.png" /></a>
      </div>
      <div class="col-sm-5">
        <a href="//<%= @domain %>/">Home</a><br />
        <a href="//<%= @domain %>/apply">Apply</a><br />
        <a href="//<%= @domain %>/volunteer">Volunteer</a><br />
        <a href="//<%= @domain %>/partner">Partner</a><br />
           <a href="//<%= @domain %>/users/sign_in">Log In</a>

<br />
        <a href="//<%= @domain %>/jobs">Jobs</a><br />
        Contact us: <a href="mailto:info@beyondz.org">info@beyondz.org</a>
      </div>
      <div class="col-sm-5 text-right">
        <p>&copy; Beyond Z 2014</p>
      </div>
    </section>
  </div>
</div>
       
    </div> <!-- .public-container -->

